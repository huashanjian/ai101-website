{
  "extends": "@docusaurus/module-type-aliases",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": [
    "docusaurus.config.ts",
    "sidebars.ts",
    "src/**/*",
    "docs/**/*",
    "blog/**/*"
  ]
}
